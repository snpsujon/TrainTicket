@model IEnumerable<TrainTicket.Models.TicketInformation>
@{
    IEnumerable<TrainTicket.Models.TicketInformation> AvlTickts = ViewData["avlTickts"] as IEnumerable<TrainTicket.Models.TicketInformation>;
    IEnumerable<TrainTicket.Models.TicketInformation> ExpTickts = ViewData["expTickts"] as IEnumerable<TrainTicket.Models.TicketInformation>;
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Assets/mystyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
</head>
<body>

    

    <div class="tab">
        <button class="tablinks" onclick="openCity(event, 'London')" id="defaultOpen">All Tickets</button>
        <button class="tablinks" onclick="openCity(event, 'Paris')">Available Tickets</button>
        <button class="tablinks" onclick="openCity(event, 'Tokyo')">Expaired Tickets</button>

        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search By Train Name.." title="Type in a name" class="topright">
        <button class="tablinks float-right" style="background: #4CAF50; text-decoration: none; "><a asp-action="Create" style="color: white;">Create New</a></button>

        
    </div>

    <div id="London" class="tabcontent">
        <span onclick="this.parentElement.style.display='none'" class="topright">&times</span>
        <div class="wrapper">
            <div class="card">
                <div class="card-body">
                    <div id="example1" class="dataTables_wrapper dt-bootstrap4 table-responsive">
                        <table id="example1_wrapper" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>Train Name</th>
                                    <th>Journey Time</th>
                                    <th>Avl Sit</th>
                                    <th>Sit Class</th>
                                    <th>From Station</th>
                                    <th>To Station</th>
                                    <th>Per Ticket Price(BDT)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i +1}))
                                {

                                    <tr>
                                        <td>@item.Index</td>
                                        <td>@Html.DisplayFor(modelItem => item.Data.TrainName)</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Data.JourneyTime)
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.Data.TotalSit)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Data.SitClass)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Data.FStarionName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Data.TStationName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Data.PerTicketPrice)</td>

                                        <td>
                                            <a href="#" class="btn btn-secondary">Edit</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
    </div>



    <div id="Paris" class="tabcontent">
        <span onclick="this.parentElement.style.display='none'" class="topright">&times</span>
        <div class="wrapper">
            <div class="card">
                
                <div class="card-body">
                    <div id="example1" class="dataTables_wrapper dt-bootstrap4 table-responsive">
                        <table id="example2_wrapper" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>Train Name</th>
                                    <th>Journey Time</th>
                                    <th>Avl Sit</th>
                                    <th>Sit Class</th>
                                    <th>From Station</th>
                                    <th>To Station</th>
                                    <th>Per Ticket Price(BDT)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                                    @foreach (var item in AvlTickts.Select((x, i) => new { Data = x, Index = i + 1 }))
                                    {

                                        <tr>
